.container {
  padding-bottom: 100rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error {
  padding: 40rpx;
  text-align: center;
  color: #e74c3c;
}

.product-swiper {
  width: 100%;
  height: 750rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

.product-info {
  padding: 30rpx;
  background: #fff;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.product-price {
  margin-bottom: 30rpx;
}

.current-price {
  font-size: 40rpx;
  color: #e74c3c;
  font-weight: bold;
  margin-right: 20rpx;
}

.market-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.variants {
  margin-bottom: 30rpx;
}

.variant-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.variant-item {
  padding: 10rpx 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.variant-item.selected {
  border-color: #e74c3c;
  color: #e74c3c;
  background: #fff5f5;
}

.quantity-selector {
  margin-bottom: 30rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  width: fit-content;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.quantity-control input {
  width: 80rpx;
  height: 60rpx;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #ddd;
  text-align: center;
  font-size: 28rpx;
}

.product-detail {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cart-btn, .buy-btn {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
}

.cart-btn {
  background: #f39c12;
}

.buy-btn {
  background: #e74c3c;
} 