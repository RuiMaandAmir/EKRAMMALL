/* 商品详情页样式 */
.container {
  padding-bottom: 120rpx;
  background: #f8f9fa;
}

/* 商品轮播图 */
.swiper-container {
  width: 100%;
  height: 750rpx;
  background: #fff;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 商品信息 */
.product-info {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-price {
  font-size: 48rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.product-price::before {
  content: '¥';
  font-size: 32rpx;
}

.product-name {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.product-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 商品规格 */
.spec-section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 32rpx;
  background: #4CAF50;
  margin-right: 16rpx;
  border-radius: 3rpx;
}

.spec-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.spec-item {
  padding: 12rpx 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s;
}

.spec-item.active {
  border-color: #4CAF50;
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
}

/* 商品详情 */
.detail-section {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.detail-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.detail-image {
  width: 100%;
  margin: 20rpx 0;
  border-radius: 8rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 10rpx;
}

.add-cart {
  background: #fff;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
}

.buy-now {
  background: #4CAF50;
  color: #fff;
}

/* 数量选择器 */
.quantity-selector {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #ddd;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}

.quantity-input {
  width: 80rpx;
  height: 60rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 0 20rpx;
}

/* 分享按钮 */
.share-button {
  position: fixed;
  right: 30rpx;
  top: 30rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error {
  padding: 40rpx;
  text-align: center;
  color: #e74c3c;
}

.product-image {
  width: 100%;
  height: 100%;
}

.current-price {
  font-size: 40rpx;
  color: #e74c3c;
  font-weight: bold;
  margin-right: 20rpx;
}

.market-price {
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.variants {
  margin-bottom: 30rpx;
}

.variant-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.variant-item {
  padding: 10rpx 30rpx;
  border: 2rpx solid #ddd;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.variant-item.selected {
  border-color: #e74c3c;
  color: #e74c3c;
  background: #fff5f5;
}

.quantity-control {
  display: flex;
  align-items: center;
  width: fit-content;
}

.product-detail {
  margin-top: 20rpx;
  padding: 30rpx;
  background: #fff;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.cart-btn, .buy-btn {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
}

.cart-btn {
  background: #f39c12;
}

.buy-btn {
  background: #e74c3c;
} 