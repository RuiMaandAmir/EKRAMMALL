.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.filter-section {
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.filter-item {
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 30rpx;
}

.filter-item.active {
  color: #fff;
  background: #ff4d4f;
}

.sort-section {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.sort-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.sort-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 1rpx;
  height: 30rpx;
  background: #eee;
}

.sort-item.active {
  color: #ff4d4f;
}

.review-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.review-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.review-item:last-child {
  border-bottom: none;
}

.user-info {
  display: flex;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.rating {
  display: flex;
  align-items: center;
}

.stars {
  display: flex;
  margin-right: 20rpx;
}

.star {
  font-size: 24rpx;
  color: #ddd;
  margin-right: 4rpx;
}

.star.active {
  color: #ffd700;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.review-content {
  margin-bottom: 20rpx;
}

.text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.review-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-info {
  flex: 1;
}

.product-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
}

.actions {
  display: flex;
}

.action-item {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
}

.action-item .icon {
  font-size: 32rpx;
  margin-right: 6rpx;
}

.action-item .icon.active {
  color: #ff4d4f;
}

.action-item .count {
  font-size: 24rpx;
  color: #999;
}

.reply-section {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.reply-list {
  margin-bottom: 20rpx;
}

.reply-item {
  margin-bottom: 20rpx;
}

.reply-item:last-child {
  margin-bottom: 0;
}

.reply-user {
  margin-bottom: 10rpx;
}

.reply-user .name {
  font-size: 24rpx;
  color: #333;
  margin-right: 20rpx;
}

.reply-user .time {
  font-size: 24rpx;
  color: #999;
}

.reply-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.reply-input {
  display: flex;
  align-items: center;
}

.reply-input .input {
  flex: 1;
  height: 60rpx;
  background: #fff;
  border-radius: 30rpx;
  padding: 0 20rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
}

.reply-input .send-btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 0;
}

.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #999;
} 