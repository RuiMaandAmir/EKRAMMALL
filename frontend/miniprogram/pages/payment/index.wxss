.container {
  padding: 20rpx;
}

.order-info {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.order-number {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.amount {
  font-size: 36rpx;
  color: #f56c6c;
  font-weight: bold;
}

.payment-methods {
  background: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.method-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.method-item.active {
  border-color: #409eff;
  background: #ecf5ff;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.action {
  padding: 30rpx;
}

.pay-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
} 