.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 当前等级卡片 */
.current-level {
  margin-bottom: 20rpx;
}

.level-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.level-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.level-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.level-info {
  flex: 1;
}

.level-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.level-description {
  font-size: 24rpx;
  color: #666;
}

.level-stats {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-item .value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 升级进度 */
.upgrade-progress {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.progress-list {
  margin-top: 20rpx;
}

.progress-item {
  margin-bottom: 20rpx;
}

.progress-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.progress-header .label {
  font-size: 28rpx;
  color: #333;
}

.progress-header .value {
  font-size: 28rpx;
  color: #666;
}

.progress-bar {
  height: 20rpx;
  background: #f0f0f0;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: #07c160;
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

/* 等级权益 */
.level-benefits {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.benefits-list {
  margin-top: 20rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.benefit-icon {
  width: 40rpx;
  height: 40rpx;
  background: #07c160;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.benefit-text {
  font-size: 28rpx;
  color: #333;
}

/* 等级说明 */
.level-description {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.description-content {
  margin-top: 20rpx;
}

.description-item {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  position: relative;
  padding-left: 30rpx;
}

.description-item:before {
  content: "•";
  position: absolute;
  left: 0;
  color: #07c160;
}

/* 区块样式 */
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: #ff4d4f;
  border-radius: 3rpx;
}

/* 权益列表 */
.benefits-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.benefit-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.benefit-icon {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
}

.benefit-icon image {
  width: 100%;
  height: 100%;
}

.benefit-content {
  flex: 1;
}

.benefit-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.benefit-desc {
  font-size: 24rpx;
  color: #666;
}

/* 条件列表 */
.conditions-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.condition-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.condition-icon {
  width: 60rpx;
  height: 60rpx;
  flex-shrink: 0;
}

.condition-icon image {
  width: 100%;
  height: 100%;
}

.condition-content {
  flex: 1;
}

.condition-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.condition-progress {
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 10rpx;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

/* 等级列表 */
.levels-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.level-item {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
  transition: all 0.3s;
}

.level-item.active {
  background: #fff7e6;
  border: 1rpx solid #ffd591;
}

.level-item.completed {
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.level-item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.level-item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.level-item-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.level-item.active .level-item-status {
  background: #fff7e6;
  color: #fa8c16;
}

.level-item.completed .level-item-status {
  background: #f6ffed;
  color: #52c41a;
}

.level-item-content {
  font-size: 24rpx;
  color: #666;
}

.level-item-desc {
  margin-bottom: 10rpx;
}

.level-item-conditions {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.condition-tag {
  font-size: 24rpx;
  color: #666;
  background: #fff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

/* 等级说明 */
.level-rules {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.rule-item {
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
}

.rule-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.rule-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
} 