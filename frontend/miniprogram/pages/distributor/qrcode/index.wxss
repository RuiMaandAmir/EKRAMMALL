.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.qrcode-card, .share-card, .stats-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-align: center;
}

.qrcode-container {
  display: flex;
  justify-content: center;
  margin: 30rpx 0;
}

.qrcode {
  width: 400rpx;
  height: 400rpx;
}

.tips {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.link-container {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.link {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.copy-btn {
  background: #ff4d4f;
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  border-radius: 6rpx;
  margin-left: 20rpx;
}

.stats {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-item .value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.stat-item .label {
  font-size: 24rpx;
  color: #999;
} 