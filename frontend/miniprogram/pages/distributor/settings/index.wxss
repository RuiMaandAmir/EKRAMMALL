.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
}

/* 区块样式 */
.section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: #ff4d4f;
  border-radius: 3rpx;
}

/* 表单项样式 */
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
}

/* 按钮样式 */
.btn {
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #ff4d4f;
  color: #fff;
}

.btn.danger {
  background: #ff4d4f;
}

/* 推广链接样式 */
.link-box {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.link {
  flex: 1;
  font-size: 24rpx;
  color: #666;
  word-break: break-all;
}

.copy-btn {
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  background: #f5f5f5;
  color: #666;
}

/* 二维码样式 */
.qrcode {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 20rpx auto;
}

/* 弹窗样式 */
.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.dialog-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.dialog-text {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.dialog-buttons {
  display: flex;
  gap: 20rpx;
}

.dialog-buttons .btn {
  flex: 1;
}

.dialog-buttons .btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.dialog-buttons .btn.confirm {
  background: #ff4d4f;
  color: #fff;
} 