.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 账户列表 */
.account-list {
  margin-bottom: 20rpx;
}

.account-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.account-info {
  flex: 1;
}

.account-type {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.account-number {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.account-bank {
  font-size: 24rpx;
  color: #666;
}

.account-actions {
  display: flex;
  gap: 20rpx;
}

.btn {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  border-radius: 30rpx;
  padding: 0;
  margin: 0;
}

.btn.edit {
  background: #f0f0f0;
  color: #666;
}

.btn.delete {
  background: #fff1f0;
  color: #ff4d4f;
}

/* 空状态 */
.empty-state {
  background: #fff;
  border-radius: 12rpx;
  padding: 60rpx 30rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-tips {
  font-size: 24rpx;
  color: #999;
}

/* 添加按钮 */
.action-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.add-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  text-align: center;
} 