.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 20rpx;
  padding-bottom: 120rpx;
}

/* 账户列表 */
.account-list {
  margin-bottom: 20rpx;
}

.account-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.account-info {
  flex: 1;
}

.account-type {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.account-detail {
  font-size: 28rpx;
  color: #333;
}

.account-name {
  margin-bottom: 6rpx;
}

.account-number {
  color: #666;
}

.account-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  font-size: 24rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  margin-left: 20rpx;
}

.action-btn.edit {
  background: #f5f5f5;
  color: #666;
}

.action-btn.delete {
  background: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
}

/* 添加账户按钮 */
.add-account {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 弹窗样式 */
.dialog {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.dialog.show {
  opacity: 1;
  visibility: visible;
}

.dialog-content {
  width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.dialog-title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.dialog-body {
  padding: 30rpx;
  max-height: 70vh;
  overflow-y: auto;
}

/* 表单样式 */
.form {
  padding: 0;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.form-item .value {
  font-size: 28rpx;
  color: #333;
}

.radio-group {
  display: flex;
}

.radio {
  margin-right: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.input {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

/* 警告和提示 */
.warning {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

.tips {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #666;
}

/* 按钮样式 */
.btn {
  font-size: 28rpx;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  margin: 0;
}

.btn.primary {
  background: #ff4d4f;
  color: #fff;
}

.dialog-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.dialog-footer .btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 0;
  font-size: 28rpx;
}

.dialog-footer .btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.dialog-footer .btn.confirm {
  background: #ff4d4f;
  color: #fff;
} 