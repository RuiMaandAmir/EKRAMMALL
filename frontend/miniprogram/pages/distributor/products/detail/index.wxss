.container {
  background: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

.product-images {
  width: 100%;
  height: 750rpx;
}

.product-images image {
  width: 100%;
  height: 100%;
}

.basic-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price {
  font-size: 40rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.commission {
  font-size: 28rpx;
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.sales {
  font-size: 26rpx;
  color: #999;
}

.detail-info {
  background: #fff;
  padding: 30rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section .title {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 20rpx;
}

.section .title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 30rpx;
  background: #ff4d4f;
}

.commission-info {
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  font-size: 28rpx;
  color: #666;
}

.info-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.share-btn {
  width: 200rpx;
  height: 80rpx;
  background: #fff;
  border: 2rpx solid #ff4d4f;
  color: #ff4d4f;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.buy-btn {
  flex: 1;
  height: 80rpx;
  background: #ff4d4f;
  color: #fff;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
} 