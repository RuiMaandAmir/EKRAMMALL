 .container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 设置列表 */
.settings-list {
  background: #fff;
  margin-top: 20rpx;
}

.settings-group {
  margin-bottom: 20rpx;
}

.settings-group:last-child {
  margin-bottom: 0;
}

.settings-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.settings-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.settings-value {
  font-size: 28rpx;
  color: #999;
  margin-right: 20rpx;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

/* 头像设置 */
.avatar-wrapper {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}

/* 清除缓存按钮 */
.clear-cache {
  margin: 40rpx 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 44rpx;
}