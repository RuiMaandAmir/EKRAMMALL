 .container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 输入框区域 */
.input-section {
  background: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  padding: 20rpx 0;
}

.input {
  flex: 1;
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx;
}

/* 提示文字 */
.tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  padding: 0 30rpx;
}

/* 保存按钮 */
.save-btn {
  margin: 40rpx 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.save-btn.disabled {
  background: #ccc;
}