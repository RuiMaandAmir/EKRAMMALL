/* 首页样式 */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  height: 80rpx;
  padding: 0 30rpx;
  margin: 20rpx;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  margin-right: 20rpx;
}

.search-icon image {
  width: 36rpx;
  height: 36rpx;
}

.search-input {
  color: #999;
  font-size: 28rpx;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff6b6b;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
}

.banner swiper {
  width: 100%;
  height: 100%;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 0 0 16rpx 16rpx;
}

/* 导航菜单 */
.nav-menu {
  background-color: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.nav-menu scroll-view {
  display: flex;
  white-space: nowrap;
}

.nav-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  width: 140rpx;
  margin: 0 10rpx;
}

.nav-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 15rpx;
}

.nav-icon image {
  width: 100%;
  height: 100%;
}

.nav-text {
  font-size: 24rpx;
  color: #333;
}

/* 通用部分样式 */
.section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx 0;
  border-radius: 16rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  font-size: 24rpx;
  color: #999;
}

/* 限时抢购 */
.flash-sale {
  position: relative;
}

.countdown {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.countdown-label {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-right: 10rpx;
}

.countdown-time {
  background-color: #ff6b6b;
  color: #fff;
  font-size: 24rpx;
  padding: 2rpx 10rpx;
  border-radius: 6rpx;
  min-width: 40rpx;
  text-align: center;
}

.countdown-colon {
  color: #ff6b6b;
  margin: 0 5rpx;
  font-weight: bold;
}

.flash-sale-scroll {
  white-space: nowrap;
  padding: 0 20rpx;
}

.flash-sale-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  vertical-align: top;
}

.flash-sale-item .product-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 10rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.flash-sale-item .product-image image {
  width: 100%;
  height: 100%;
}

.flash-sale-item .product-info {
  padding: 0 10rpx;
}

.flash-sale-item .product-price {
  display: flex;
  align-items: center;
}

.flash-sale-item .price {
  font-size: 28rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.flash-sale-item .original-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.flash-sale-item .product-tag {
  display: inline-block;
  font-size: 20rpx;
  color: #fff;
  background-color: #ff6b6b;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin-top: 10rpx;
}

/* 精选商品和分类商品 */
.product-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 20rpx;
}

.product-item {
  width: calc(50% - 15rpx);
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.product-item:nth-child(odd) {
  margin-right: 15rpx;
}

.product-item:nth-child(even) {
  margin-left: 15rpx;
}

.product-item .product-image {
  width: 100%;
  height: 345rpx;
  overflow: hidden;
}

.product-item .product-image image {
  width: 100%;
  height: 100%;
}

.product-item .product-name {
  font-size: 28rpx;
  color: #333;
  padding: 20rpx 20rpx 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 84rpx;
}

.product-item .product-price-row {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.product-item .product-price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.product-item .product-original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.product-item .product-sales {
  font-size: 22rpx;
  color: #999;
  padding: 10rpx 20rpx 20rpx;
}

/* 回到顶部按钮 */
.back-to-top {
  position: fixed;
  right: 30rpx;
  bottom: 120rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 99;
}

.back-to-top image {
  width: 40rpx;
  height: 40rpx;
} 