.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.logistics-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.company,
.tracking-number {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tracking-number {
  justify-content: space-between;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 140rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.copy-btn {
  font-size: 24rpx;
  color: #409eff;
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
}

.copy-btn::after {
  border: none;
}

.timeline {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.timeline-item {
  position: relative;
  padding-left: 30rpx;
  margin-bottom: 40rpx;
}

.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: -40rpx;
  width: 2rpx;
  background: #eee;
}

.timeline-item:last-child::before {
  display: none;
}

.timeline-item.active::before {
  background: #409eff;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.dot {
  position: absolute;
  left: -6rpx;
  top: 8rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #eee;
}

.timeline-item.active .dot {
  background: #409eff;
  box-shadow: 0 0 0 4rpx rgba(64, 158, 255, 0.2);
}

.content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.order-info {
  background: #fff;
  padding: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.item {
  display: flex;
  margin-bottom: 20rpx;
}

.item:last-child {
  margin-bottom: 0;
} 