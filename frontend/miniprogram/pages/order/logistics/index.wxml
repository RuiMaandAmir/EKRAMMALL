<view class="container">
  <view class="logistics-info">
    <view class="company">
      <text class="label">物流公司：</text>
      <text class="value">{{logistics.company}}</text>
    </view>
    <view class="tracking-number">
      <text class="label">物流单号：</text>
      <text class="value">{{logistics.tracking_number}}</text>
      <button class="copy-btn" bindtap="copyTrackingNumber">复制</button>
    </view>
  </view>

  <view class="timeline">
    <view class="timeline-item {{index === 0 ? 'active' : ''}}" wx:for="{{logistics.tracks}}" wx:key="time">
      <view class="time">{{item.time}}</view>
      <view class="dot"></view>
      <view class="content">{{item.status}}</view>
    </view>
  </view>

  <view class="order-info">
    <view class="title">订单信息</view>
    <view class="content">
      <view class="item">
        <text class="label">收货人：</text>
        <text class="value">{{order.shipping_address.name}}</text>
      </view>
      <view class="item">
        <text class="label">联系电话：</text>
        <text class="value">{{order.shipping_address.phone}}</text>
      </view>
      <view class="item">
        <text class="label">收货地址：</text>
        <text class="value">{{order.shipping_address.address}}</text>
      </view>
    </view>
  </view>
</view> 