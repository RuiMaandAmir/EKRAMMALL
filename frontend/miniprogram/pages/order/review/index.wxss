 .container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.order-info {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.content {
  font-size: 28rpx;
  color: #666;
}

.order-number {
  margin-bottom: 10rpx;
}

.amount {
  color: #ff4d4f;
}

.product-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price {
  font-size: 28rpx;
  color: #ff4d4f;
}

.review-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.review-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.review-item:last-child {
  border-bottom: none;
}

.product-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.product-header .product-image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.product-header .product-name {
  font-size: 28rpx;
  color: #333;
  margin: 0;
}

.rating-section {
  margin-bottom: 20rpx;
}

.rating-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.rating-stars {
  display: flex;
}

.star {
  font-size: 40rpx;
  color: #ddd;
  margin-right: 10rpx;
}

.star.active {
  color: #ffd700;
}

.review-content {
  margin-bottom: 20rpx;
}

.review-text {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.upload-section {
  margin-bottom: 20rpx;
}

.upload-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 10rpx;
}

.upload-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.upload-item:nth-child(4n) {
  margin-right: 0;
}

.preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-btn .icon {
  font-size: 40rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.upload-btn .text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

.action {
  padding: 40rpx 20rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}