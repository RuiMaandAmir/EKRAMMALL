 .container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.order-info,
.refund-type,
.refund-reason,
.refund-amount,
.refund-desc,
.upload-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.content {
  font-size: 28rpx;
  color: #666;
}

.order-number,
.amount {
  margin-bottom: 10rpx;
}

.type-list {
  display: flex;
}

.type-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.type-item:last-child {
  margin-right: 0;
}

.type-item.active {
  background: #fef0f0;
  border-color: #f56c6c;
  color: #f56c6c;
}

.reason-list {
  display: flex;
  flex-wrap: wrap;
  margin: -10rpx;
}

.reason-item {
  width: calc(50% - 20rpx);
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #ddd;
  margin: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.reason-item.active {
  background: #fef0f0;
  border-color: #f56c6c;
  color: #f56c6c;
}

.custom-reason {
  margin-top: 20rpx;
}

.reason-input,
.desc-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1rpx solid #ddd;
  font-size: 28rpx;
  color: #333;
}

.amount-input {
  display: flex;
  align-items: center;
  height: 80rpx;
  border: 1rpx solid #ddd;
  padding: 0 20rpx;
}

.symbol {
  font-size: 32rpx;
  color: #333;
  margin-right: 10rpx;
}

.amount-input input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #333;
}

.amount-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.upload-list {
  display: flex;
  flex-wrap: wrap;
  margin: -10rpx;
}

.upload-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin: 10rpx;
}

.preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  font-size: 32rpx;
}

.upload-btn {
  width: 160rpx;
  height: 160rpx;
  margin: 10rpx;
  border: 1rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon {
  font-size: 48rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.text {
  font-size: 24rpx;
  color: #999;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.action {
  padding: 40rpx 30rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  background: #f56c6c;
  color: #fff;
  border-radius: 44rpx;
}