.container {
  background: #f5f5f5;
  min-height: 100vh;
}

/* 订单状态标签页 */
.tabs {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #fff;
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #07c160;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
  margin-top: 100rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.order-no {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 28rpx;
  color: #07c160;
}

/* 订单商品 */
.order-products {
  padding: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.product-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.product-quantity {
  font-size: 24rpx;
  color: #999;
}

/* 订单底部 */
.order-footer {
  padding: 20rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-total {
  font-size: 28rpx;
  color: #333;
}

.order-total-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.order-actions {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

.action-btn.primary {
  background: #07c160;
  color: #fff;
}

.action-btn.secondary {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-shopping {
  display: inline-block;
  padding: 20rpx 60rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 30rpx 0;
  font-size: 24rpx;
  color: #999;
} 