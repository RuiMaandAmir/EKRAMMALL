.container {
  padding: 0;
  background: #f5f5f5;
  min-height: 100vh;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.tab {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #ff4d4f;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #ff4d4f;
  border-radius: 2rpx;
}

.order-list {
  margin-top: 88rpx;
  padding: 20rpx;
}

.order-item {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.order-number {
  font-size: 24rpx;
  color: #999;
}

.status {
  font-size: 24rpx;
  color: #ff4d4f;
}

.order-content {
  padding: 20rpx;
}

.product-list {
  margin-bottom: 20rpx;
}

.product-item {
  display: flex;
  margin-bottom: 20rpx;
}

.product-item:last-child {
  margin-bottom: 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.product-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.quantity {
  font-size: 24rpx;
  color: #999;
}

.order-summary {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
}

.total {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.amount {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.order-footer {
  padding: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.actions {
  display: flex;
  justify-content: flex-end;
}

.btn {
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: #fff;
  border: 1rpx solid #ddd;
  color: #666;
}

.btn.primary {
  background: #ff4d4f;
  border-color: #ff4d4f;
  color: #fff;
}

.btn.cancel {
  border-color: #999;
  color: #999;
}

.loading, .no-more {
  text-align: center;
  padding: 20rpx;
  font-size: 24rpx;
  color: #999;
} 