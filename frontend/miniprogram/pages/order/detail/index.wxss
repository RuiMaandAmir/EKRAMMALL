.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.status-section {
  background: #fff;
  padding: 40rpx 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.status {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.status.pending {
  color: #f56c6c;
}

.status.paid {
  color: #e6a23c;
}

.status.shipped {
  color: #409eff;
}

.status.completed {
  color: #67c23a;
}

.desc {
  font-size: 28rpx;
  color: #666;
}

.address-section,
.order-section,
.products-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.content {
  font-size: 28rpx;
  color: #666;
}

.name-phone {
  margin-bottom: 10rpx;
}

.name {
  margin-right: 20rpx;
}

.address {
  line-height: 1.5;
}

.order-number,
.create-time,
.pay-time,
.shipping-time,
.complete-time {
  margin-bottom: 10rpx;
}

.product-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
}

.product-spec {
  font-size: 24rpx;
  color: #999;
}

.product-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price {
  font-size: 28rpx;
  color: #f56c6c;
  font-weight: bold;
}

.quantity {
  font-size: 24rpx;
  color: #999;
}

.amount-section {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
  font-size: 28rpx;
}

.item.total {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
  font-weight: bold;
  color: #333;
}

.label {
  color: #666;
}

.value {
  color: #333;
}

.action-section {
  padding: 30rpx;
  display: flex;
  justify-content: flex-end;
}

.btn {
  margin-left: 20rpx;
  font-size: 28rpx;
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
}

.btn.primary {
  background: #f56c6c;
  color: #fff;
  border: none;
}

.btn.cancel {
  background: #fff;
  color: #666;
  border: 1rpx solid #ddd;
} 