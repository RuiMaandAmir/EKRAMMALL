.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 收货地址 */
.address-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.address-info {
  display: flex;
  align-items: flex-start;
}

.address-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.address-detail {
  flex: 1;
}

.address-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.address-phone {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.address-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
}

/* 商品列表 */
.order-items {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.order-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.order-item:last-child {
  border-bottom: none;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-spec {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.item-price-quantity {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.item-quantity {
  font-size: 24rpx;
  color: #999;
}

/* 配送方式 */
.delivery-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.delivery-options {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.delivery-option {
  padding: 10rpx 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #666;
}

.delivery-option.active {
  border-color: #07c160;
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

/* 订单备注 */
.remark-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.remark-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

/* 价格明细 */
.price-detail {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.price-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-item.total {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 底部结算栏 */
.settlement-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.total-price {
  flex: 1;
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.submit-btn {
  width: 240rpx;
  height: 80rpx;
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn.disabled {
  background: #ccc;
} 