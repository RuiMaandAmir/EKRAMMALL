.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 统计卡片样式 */
.stats-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.stats-item {
  text-align: center;
}

.stats-item .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
}

.stats-item .value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: block;
}

/* 列表容器样式 */
.list-container {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 120rpx;
}

.list-header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.list-header text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

/* 提现记录项样式 */
.withdrawal-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.item-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.amount {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.status {
  font-size: 28rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.status.pending {
  color: #ff9800;
  background: #fff4e5;
}

.status.approved {
  color: #4caf50;
  background: #e8f5e9;
}

.status.rejected {
  color: #f44336;
  background: #ffebee;
}

.status.completed {
  color: #2196f3;
  background: #e3f2fd;
}

.item-info {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999;
}

/* 空状态提示 */
.empty-tip {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 4rpx rgba(0,0,0,0.1);
}

.apply-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
} 