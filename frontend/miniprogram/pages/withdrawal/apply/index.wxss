.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 余额卡片样式 */
.balance-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  text-align: center;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.balance-card .label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.balance-card .amount {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
  display: block;
}

/* 表单样式 */
.form-container {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.form-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item .label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.form-item .input {
  height: 80rpx;
  font-size: 32rpx;
  color: #333;
}

/* 提示信息样式 */
.tips {
  padding: 20rpx;
}

.tip-item {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

/* 底部按钮 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 4rpx rgba(0,0,0,0.1);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.submit-btn[disabled] {
  background: #ccc !important;
  color: #fff !important;
} 